{{ 'banner-melatonic.css' | asset_url | stylesheet_tag }}

<section class="banner-melatonic page-width">
  <div class="banner-melatonic__wrapper banner-melatonic__wrapper-marquee">
    <div class="banner-melatonic__content banner-melatonic__content--marquee">
      <div class="banner-melatonic__text">
        <h2 class="banner-melatonic__title section-title-melatonic">thicker hair or your money back</h2>
      </div>
      <p class="banner-melatonic__description">
        We’re so confident you’ll see results, if you don’t notice visible hair growth in 90 days, we’ll give you your
        money back. Simple as that.
      </p>

      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product %}
          {% assign product = block.settings.product %}
          <a class="banner-melatonic__link button-dark" href="{{ product.url }}">BUY NOW</a>
        {% endif %}
      {% endfor %}

      <div class="ticker-text__wrapper">
        <div class="ticker-text__list">
          <span class="ticker-text__item ticker-text__item-1"
            >100% Plant-Based • Silicone + Paraben Free • Gluten Free • Vegan • Vitamin C • Biotin</span
          >
          <span class="ticker-text__item ticker-text__item-2"
            >100% Plant-Based • Silicone + Paraben Free • Gluten Free • Vegan • Vitamin C • Biotin</span
          >
        </div>
      </div>
    </div>

    <div class="banner-melatonic__image banner-melatonic__image-marquee">
      <img
        src="{{ 'banner-marquee.jpg' | asset_url }}"
        width="760"
        height="745"
        alt="Melatonic poster"
        loading="lazy"
      >
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner with marquee",
  "blocks": [
    {
      "type": "product",
      "name": "Product link",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select a product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner with marquee",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
