{{ 'banner-melatonic.css' | asset_url | stylesheet_tag }}

<section class="banner-melatonic page-width">
  <div class="banner-melatonic__wrapper">
    <div class="banner-melatonic__image">
      <img
        class="banner-melatonic-banner-logo"
        src="{{ 'banner-logo.png' | asset_url }}"
        width="126"
        height="126"
        alt="banner logo"
        loading="lazy"
      >

      <img
        class="banner-melatonic__image-img"
        src="{{ 'banner-melatonic-img.jpg' | asset_url }}"
        width="880"
        height="660"
        alt="Melatonic bottle"
        loading="lazy"
      >

      <a href="#" class="button-dark banner-melatonic__banner-btn" >25% OFF TODAY</a>
    </div>

    <div class="banner-melatonic__content">
      <div class="banner-melatonic__text">
        <h2 class="banner-melatonic__title section-title-melatonic">Volufiline 100%</h2>
        <div class="banner-melatonic__price">
          Enhances volume and plumps skin
        </div>
      </div>
      <div class="banner-melatonic__benefits">
        <span>Volumize.</span>
        <span>Tighten.</span>
        <span>Restore.</span>
      </div>

      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product %}
          {% assign product = block.settings.product %}
          <a class="banner-melatonic__link button-dark" href="{{ product.url }}">GRAB A BOTTLE</a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner with text",
  "blocks": [
    {
      "type": "product",
      "name": "Product link",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select a product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner with text",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
