{{ 'banner-result.css' | asset_url | stylesheet_tag }}

<section class="banner-result banner-compound page-width">
  <div class="banner-result__wrapper banner-compound__wrapper">
    <div class="banner-result__image">
      <img
        src="{{ 'banner-compound.jpg' | asset_url }}"
        width="860"
        height="860"
        alt="Melatonic poster"
        loading="lazy"
      >
    </div>

    <div class="banner-result__content">
      <div class="banner-compound__content-wrapper">
        <h2 class="banner-compound__title">what’s inside</h2>

        <div class="banner-compound__text">
          <p>Get to know the ingredients that support healthy roots and promote visible hair growth.</p>
        </div>

        <ul class="banner-compound__list">
          <li class="banner-compound__item">
            <h3 class="banner-compound__item-title">MELATONIN</h3>
            <p class="banner-compound__item-description">
              the hero ingredient behind Melatonic. It helps reset the hair growth cycle, reduce scalp stress, and create the ideal environment for fuller, thicker hair. It’s the core of our formula and the secret most hair serums are missing.
            </p>
          </li>

          <li class="banner-compound__item">
            <h3 class="banner-compound__item-title">ARGAN OIL</h3>
            <p class="banner-compound__item-description">
              a nutrient-rich oil that nourishes the scalp, supports hydration, and enhances hair softness and shine
            </p>
          </li>
        </ul>

        <div class="banner-compound__text">
          <p>
            also made with <span>BIOTIN,</span> <span>VITAMIN E,</span> <span>AVOCADO OIL,</span>
            <span>ALMOND OIL,</span> <span>VITAMIN C</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner compound",
  "settings": [],
  "presets": [
    {
      "name": "Banner compound"
    }
  ]
}
{% endschema %}
